<!DOCTYPE html>
<html lang="tr" class="h-full">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>SLP ‚Äî Stream Lark Player</title>

  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#0b0b0f" />

  <!-- Tailwind CDN (dev-friendly) -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            ink: '#0b0b0f',
            panel: '#0f0f14',
            accent: '#a855f7',
            accent2: '#7c3aed',
            lightBg: '#f6f7fb'
          },
          boxShadow: {
            glass: '0 10px 30px rgba(0,0,0,0.35)'
          },
          borderRadius: { xl2: '1rem' }
        }
      }
    }
  </script>

  <link rel="apple-touch-icon" href="/icons/icon-192.png" />
  <style>
    /* extra small tweaks */
    .progress-track { background: linear-gradient(90deg,#2b0b3d 0%, #3e0d66 100%); height:6px; border-radius:999px; }
    .progress-thumb { width:14px; height:14px; border-radius:50%; background:#fff; box-shadow:0 4px 10px rgba(0,0,0,.4); transform:translateY(-4px); }
    .badge-down { background: linear-gradient(90deg,#7c3aed,#a855f7); color:white; font-size:10px; padding:2px 6px; border-radius:999px; }
    /* compact playlist card */
    .pl-card { transition: transform .18s ease, box-shadow .18s ease; }
    .pl-card:hover { transform: translateY(-6px); box-shadow: 0 12px 30px rgba(0,0,0,.35); }
  </style>

  <script>
    // prevent FOUC for dark
    (function(){
      const t = localStorage.getItem('theme') || 'dark';
      if (t === 'dark') document.documentElement.classList.add('dark');
    })();
  </script>
</head>
<body class="h-full bg-lightBg dark:bg-ink text-gray-900 dark:text-white">
  <div class="min-h-screen grid grid-rows-[auto,1fr]">
    <header class="px-4 py-3 border-b border-black/5 dark:border-white/10 bg-white/80 dark:bg-panel/80 backdrop-blur">
      <div class="max-w-6xl mx-auto flex items-center justify-between">
        <div class="flex items-center gap-3">
          <img src="/icons/icon-192.png" class="w-9 h-9 rounded-md" alt="SLP"/>
          <div>
            <h1 class="text-lg font-semibold tracking-tight">SLP</h1>
            <div class="text-xs text-gray-500 dark:text-white/50 -mt-1">YouTube powered, Lark-like player</div>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <button id="themeToggle" class="px-3 py-1.5 rounded-full bg-black/5 dark:bg-white/10 text-sm">Tema: <span id="themeLabel">Koyu</span></button>
          <button id="installBtn" class="hidden px-3 py-1.5 rounded-full bg-accent text-white">Y√ºkle</button>
        </div>
      </div>
    </header>

    <main class="max-w-6xl mx-auto w-full p-4">
      <%- include(content) %>
    </main>
  </div>

  <!-- Mini Player (fixed bottom) -->
  <div id="miniPlayer" class="fixed inset-x-0 bottom-4 mx-auto max-w-3xl px-4">
    <div class="bg-gradient-to-r from-[#140616] to-[#1b0524] text-white rounded-2xl p-2 flex items-center gap-3 shadow-glass pl-3 cursor-pointer">
      <img id="miniArt" src="/icons/icon-192.png" class="w-12 h-12 rounded-lg object-cover"/>
      <div class="flex-1 min-w-0">
        <div id="miniTitle" class="truncate font-medium">√áalan yok</div>
        <div id="miniArtist" class="text-xs opacity-80">‚Äî</div>
      </div>
      <div class="flex items-center gap-2">
        <button id="miniPlay" class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">‚ñ∂</button>
        <button id="miniAdd" class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center">Ôºã</button>
      </div>
    </div>
  </div>

  <!-- Expanded Player modal (hidden) -->
  <div id="bigPlayer" class="hidden fixed inset-0 z-50 bg-black/80 flex items-end md:items-center justify-center p-6">
    <div class="bg-gradient-to-b from-[#120712] to-[#0b0b0f] w-full md:w-[760px] max-h-[92vh] rounded-2xl p-6 overflow-auto">
      <div class="flex flex-col md:flex-row items-center gap-6">
        <img id="bigArt" src="/icons/icon-512.png" class="w-44 h-44 rounded-2xl object-cover"/>
        <div class="flex-1">
          <div class="text-xl font-semibold" id="bigTitle">‚Äî</div>
          <div class="text-sm text-gray-300 mt-1" id="bigArtist">‚Äî</div>

          <div class="mt-6">
            <div class="flex items-center gap-3 justify-center md:justify-start">
              <button id="btnShuffle" class="p-3 rounded-full bg-white/5">üîÄ</button>
              <button id="btnPrev" class="p-3 rounded-full bg-white/5">‚èÆ</button>
              <button id="btnPlay" class="px-6 py-3 rounded-full bg-accent text-white text-lg">‚ñ∂</button>
              <button id="btnNext" class="p-3 rounded-full bg-white/5">‚è≠</button>
              <button id="btnLoop" class="p-3 rounded-full bg-white/5">‚ü≤</button>
            </div>

            <div class="mt-5">
              <div class="flex items-center gap-3">
                <span id="curTime" class="text-xs w-12 text-right">0:00</span>
                <div class="flex-1">
                  <div class="progress-track relative h-2 rounded-full">
                    <div id="progressFill" class="absolute left-0 top-0 bottom-0 bg-gradient-to-r from-[#7c3aed] to-[#a855f7]" style="width:0%"></div>
                    <div id="progressThumb" class="absolute top-[-6px] left-0 progress-thumb"></div>
                  </div>
                </div>
                <span id="durTime" class="text-xs w-12">0:00</span>
              </div>
            </div>

            <div class="mt-4 flex items-center gap-3 justify-between">
              <div class="flex gap-2">
                <button id="btnDownload" class="px-3 py-1 rounded-full bg-white/5">ƒ∞ndir</button>
                <button id="btnAddToPl" class="px-3 py-1 rounded-full bg-white/5">Playlist'e Ekle</button>
                <button id="btnShare" class="px-3 py-1 rounded-full bg-white/5">Payla≈ü</button>
              </div>
              <div>
                <button id="btnClose" class="px-3 py-1 rounded-full bg-white/5">Kapat</button>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <audio id="audioEl" preload="metadata"></audio>
  <script type="module" src="/js/app.js"></script>
</body>
</html>
