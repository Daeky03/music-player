<!DOCTYPE html>
<html lang="tr" class="h-full">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>SLP — Smart Listening Player</title>
  <meta name="theme-color" content="#0b1020" />
  <link rel="manifest" href="/manifest.json" />
  <link rel="apple-touch-icon" href="/icons/icon-192.png" />
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            ink: '#0b0b0f',
            panel: '#0f1724',
            accent: '#7c3aed',
            accent2: '#a78bfa',
            lightBg: '#f3f4f6'
          },
          boxShadow: {
            glass: '0 8px 30px rgba(12, 14, 20, 0.45)'
          }
        }
      }
    };
    // Prevent FOUC for theme
    (function(){
      const theme = localStorage.getItem('theme') || 'dark';
      if(theme === 'dark') document.documentElement.classList.add('dark');
    })();
  </script>

  <style>
    /* subtle scrollbar */
    ::-webkit-scrollbar { height:10px; width:10px; }
    ::-webkit-scrollbar-thumb { background: rgba(0,0,0,0.15); border-radius:999px; }
    .glass-card { background: linear-gradient(180deg, rgba(255,255,255,0.75), rgba(255,255,255,0.6)); }
    .dark .glass-card { background: linear-gradient(180deg, rgba(20,20,28,0.65), rgba(8,9,12,0.6)); }
  </style>
</head>
<body class="h-full bg-lightBg dark:bg-ink dark:text-white text-slate-900">
  <div class="min-h-screen flex flex-col">
    <header class="w-full border-b border-gray-200 dark:border-white/6 bg-white/80 dark:bg-panel/85 backdrop-blur">
      <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between gap-3">
        <div class="flex items-center gap-3">
          <img src="/icons/icon-192.png" alt="SLP" class="w-10 h-10 rounded-lg shadow-sm"/>
          <div>
            <h1 class="text-xl font-semibold tracking-tight">SLP</h1>
            <p class="text-xs text-gray-500 dark:text-white/50 -mt-0.5">Smart Listening Player</p>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <button id="themeToggle" class="px-3 py-1.5 rounded-full bg-black/5 dark:bg-white/8 hover:scale-105 transition">Tema: <span id="themeLabel">Koyu</span></button>
          <button id="installBtn" class="hidden px-3 py-1.5 rounded-full bg-accent text-white hover:bg-accent2 transition">Yükle</button>
        </div>
      </div>
    </header>

    <main class="flex-1 max-w-6xl mx-auto w-full px-4 py-6">
      <div class="rounded-2xl p-4 glass-card shadow-glass">
        <!-- top hero: search -->
        <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
          <div class="flex-1">
            <input id="search" placeholder="Ara: şarkı, sanatçı veya YouTube linki" class="w-full rounded-xl px-4 py-3 bg-white/60 dark:bg-white/4 outline-none placeholder:opacity-60" />
          </div>
          <div class="flex gap-2 items-center">
            <button id="searchBtn" class="px-4 py-3 rounded-xl bg-accent text-white hover:bg-accent2">Ara</button>
            <button id="micBtn" class="p-3 rounded-xl bg-black/5 dark:bg-white/6" title="Sesle ara (gelecek)">
              <!-- mic svg -->
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 14a3 3 0 0 0 3-3V6a3 3 0 0 0-6 0v5a3 3 0 0 0 3 3z"/><path d="M19 11v1a7 7 0 0 1-14 0v-1"/></svg>
            </button>
          </div>
        </div>

        <div class="mt-6 grid md:grid-cols-[260px,1fr] gap-4">
          <aside class="rounded-xl p-3 bg-white/40 dark:bg-white/3">
            <nav class="flex flex-col gap-2">
              <button id="tab-library" class="w-full text-left px-3 py-2 rounded-lg bg-black/5 dark:bg-white/8">Kütüphane</button>
              <button id="tab-playlists" class="w-full text-left px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/8">Çalma Listeleri</button>
              <button id="tab-downloaded" class="w-full text-left px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/8">İndirilenler</button>
            </nav>

            <div class="mt-4 space-y-2">
              <button id="newPlaylistBtn" class="w-full px-3 py-2 rounded-full bg-accent text-white">Yeni Playlist</button>
              <button id="notifyPermBtn" class="w-full px-3 py-2 rounded-full bg-white/10 dark:bg-white/6">Bildirim izni</button>
            </div>

            <div class="mt-6">
              <h3 class="text-xs text-slate-500 dark:text-white/50 uppercase tracking-wide mb-2">Hızlı</h3>
              <ul class="space-y-2 text-sm">
                <li><a href="#" class="flex items-center gap-2 text-gray-700 dark:text-white/80"><svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M10 20v-6h4v6"/></svg> Çalan</a></li>
                <li><a href="#" class="flex items-center gap-2 text-gray-700 dark:text-white/80"><svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M12 3v10"/></svg> Popüler</a></li>
              </ul>
            </div>
          </aside>

          <section class="space-y-4">
            <%- include(content) %>
          </section>
        </div>
      </div>
    </main>

    <!-- Player bar fixed bottom -->
    <div id="playerBar" class="fixed inset-x-0 bottom-4 pointer-events-auto">
      <div class="max-w-3xl mx-auto px-4">
        <div id="miniPlayer" class="rounded-2xl bg-white/90 dark:bg-panel/90 p-3 flex items-center gap-3 shadow-glass">
          <img id="npArtMini" src="/icons/icon-192.png" class="w-12 h-12 rounded-lg object-cover"/>
          <div class="flex-1 min-w-0">
            <div id="npTitleMini" class="truncate font-medium">Çalan yok</div>
            <div id="npArtistMini" class="truncate text-xs text-gray-600 dark:text-white/60">—</div>
          </div>
          <div class="flex items-center gap-2">
            <button id="btnMiniRew" class="p-2 rounded-full bg-white/10">⟲10</button>
            <button id="btnMiniPrev" class="p-2 rounded-full bg-white/10">⏮</button>
            <button id="btnMiniPlay" class="px-4 py-2 rounded-full bg-accent text-white">▶</button>
            <button id="btnMiniNext" class="p-2 rounded-full bg-white/10">⏭</button>
            <button id="btnExpand" class="p-2 rounded-full bg-white/10">⤢</button>
          </div>
        </div>
      </div>
    </div>

    <audio id="audioEl" preload="metadata"></audio>

    <footer class="mt-10 py-6 text-center text-xs text-gray-500 dark:text-white/50">
      © <%= new Date().getFullYear() %> SLP — Built with ♥
    </footer>
  </div>

  <script src="/js/app.js" type="module"></script>
</body>
</html>
