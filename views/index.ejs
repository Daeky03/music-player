<!-- index.ejs — main content area (renders inside layout) -->
<div class="space-y-4">
  <!-- Library view -->
  <div id="view-library" class="rounded-xl p-4 bg-white/60 dark:bg-panel/60">
    <h2 class="text-lg font-semibold mb-3">Arama Sonuçları</h2>

    <!-- results container -->
    <div id="tracks" class="grid gap-3 sm:grid-cols-1 md:grid-cols-1"></div>

    <div id="noResults" class="hidden text-sm text-gray-500 mt-3">
      Arama yapın — YouTube'dan sonuçlar burada görünecek.
    </div>
  </div>

  <!-- Playlists -->
  <div id="view-playlists" class="rounded-xl p-4 bg-white/60 dark:bg-panel/60 hidden">
    <h2 class="text-lg font-semibold mb-3">Çalma Listeleri</h2>
    <ul id="playlistList" class="grid gap-3 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3"></ul>
  </div>

  <!-- Downloads -->
  <div id="view-downloaded" class="rounded-xl p-4 bg-white/60 dark:bg-panel/60 hidden">
    <h2 class="text-lg font-semibold mb-3">İndirilenler (Offline)</h2>
    <ul id="downloadList" class="space-y-2"></ul>
  </div>
</div>
