<!-- Ana sayfa -->
<section id="view-home" class="space-y-4">
  <!-- Kategoriler (6 kutu, renkli) -->
  <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
    <div class="rounded-xl p-4 bg-gradient-to-br from-purple-500 to-fuchsia-600 text-white">Trend</div>
    <div class="rounded-xl p-4 bg-gradient-to-br from-rose-500 to-orange-500 text-white">Yeni</div>
    <div class="rounded-xl p-4 bg-gradient-to-br from-cyan-500 to-blue-600 text-white">Pop</div>
    <div class="rounded-xl p-4 bg-gradient-to-br from-emerald-500 to-teal-600 text-white">Lo-fi</div>
    <div class="rounded-xl p-4 bg-gradient-to-br from-indigo-500 to-purple-700 text-white">EDM</div>
    <div class="rounded-xl p-4 bg-gradient-to-br from-amber-500 to-pink-600 text-white">Mix</div>
  </div>

  <!-- Playlist grid (dikdörtgen, sol kapak sağ ad) -->
  <div>
    <h2 class="text-lg font-semibold mb-2">Çalma Listelerin</h2>
    <div id="playlistGrid" class="grid gap-3">
      <!-- JS dolduracak -->
    </div>
  </div>
</section>

<!-- Arama -->
<section id="view-search" class="hidden space-y-4">
  <div class="flex gap-2">
    <input id="search" placeholder="Ara: şarkı / sanatçı" class="flex-1 px-3 py-2 rounded-lg bg-black/5 dark:bg-white/10 outline-none"/>
    <button id="btnDoSearch" class="pill bg-accent text-white">Ara</button>
  </div>
  <div id="searchResults" class="space-y-2"></div>
</section>

<!-- Oluştur -->
<section id="view-create" class="hidden space-y-4">
  <div class="rounded-xl p-4 bg-white/80 dark:bg-panel/80 shadow-glass">
    <h2 class="text-lg font-semibold mb-3">Yeni Playlist Oluştur</h2>
    <div class="flex flex-col sm:flex-row gap-2">
      <input id="plName" class="flex-1 px-3 py-2 rounded-lg bg-black/5 dark:bg-white/10 outline-none" placeholder="Ad" />
      <input id="plCoverUrl" class="flex-1 px-3 py-2 rounded-lg bg-black/5 dark:bg-white/10 outline-none" placeholder="Kapak (URL - YouTube thumb olabilir)" />
      <button id="createPlaylist" class="pill bg-accent text-white">Oluştur</button>
    </div>
  </div>
</section>
